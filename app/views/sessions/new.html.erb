<%= form_with(url: '/login', method: 'post') do |form| %>
  <%= form.label :email %>
  <%= form.email_field :email %>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <%= form.label :location, 'Location' %>
  <%= form.text_field :location, value: cookies[:location] %>

  <%= form.submit "Log In" %>
<% end %>